<style>
    {% assign alignment_nav =  section.settings.alignment %}

    {% comment %}/*  Vertical Menu  */{% endcomment %}
    {% assign bg_title =  section.settings.bg_title %}
    {% assign color_title =  section.settings.color_title %}
    {% assign color_view_all =  section.settings.color_view_all %}

    {% assign bg_menu =  section.settings.bg_menu %}
    {% assign bg_dropdown_menu = section.settings.bg_dropdown_menu %}
    
    
    /*  Menu Lv 1  */
    {% assign color_menu_lv1 = section.settings.color_menu_lv1 %}
    {% assign hover_color_mnu_lv1 = section.settings.hover_color_mnu_lv1 %}
    {% assign font_size_mnu_lv1 = section.settings.font_size_mnu_lv1 %}
    
    /*  Menu Lv 2  */
    {% assign color_menu_lv2 = section.settings.color_menu_lv2 %}
    {% assign hover_color_mnu_lv2 = section.settings.hover_color_mnu_lv2 %}
    {% assign font_size_mnu_lv2 = section.settings.font_size_mnu_lv2 %}
    
    /*  Menu Lv 3  */
    {% assign color_menu_lv3 = section.settings.color_menu_lv3 %}
    {% assign hover_color_mnu_lv3 = section.settings.hover_color_mnu_lv3 %}
    {% assign font_size_mnu_lv3 = section.settings.font_size_mnu_lv3 %}
    
    /*  Label - Navigation  */
    {% assign bg_lb_sale = section.settings.bg_lb_sale %}
    {% assign color_lb_sale = section.settings.color_lb_sale %}
    {% assign bg_lb_new = section.settings.bg_lb_new %}
    {% assign color_lb_new = section.settings.color_lb_new %}

    {% assign bg_lb_hot = section.settings.bg_lb_hot %}
    {% assign color_lb_hot = section.settings.color_lb_hot %}

    .site-nav .menu-lv-1 > a,
    .site-nav .menu-mb-title {
        font-size: {{ font_size_mnu_lv1 }};    
    }
    
    .site-nav .menu-lv-2 > a,
    .site-nav .mega-menu .mega-banner .title,
    .site-nav .mega-menu .product-item .btn {
        font-size: {{ font_size_mnu_lv2 }};    
    }
    
    .site-nav .menu-lv-3 > a {
        font-size: {{ font_size_mnu_lv3 }};    
    }

    .site-nav .icon_sale {
        background-color: {{ bg_lb_sale }};
        color: {{ color_lb_sale }};
    }
        
    .site-nav .icon_new {
        background-color: {{ bg_lb_new }};
        color: {{ color_lb_new }};
    }
        
    .site-nav .icon_hot {
        background-color: {{ bg_lb_hot }};
        color: {{ color_lb_hot }};
    }

    @media (min-width:1200px) {
        .wrapper-navigation,
        .main-menu,
        .vertical-menu .nav-bar {
            background-color: {{ bg_menu }};
        }
        
        .site-nav .sub-menu-mobile,
        .site-nav .sub-menu-mobile .bg {
            background-color: {{ bg_dropdown_menu }};
        }

        .vertical-menu .site-nav .mega-menu>.sub-menu-mobile,
        .vertical-menu .site-nav .no-mega-menu>.sub-menu-mobile {
            background-color: rgba(255, 255, 255, 0);
        }
        
        .wrapper-navigation .horizontal-menu .nav-bar {
            text-align: {{ alignment_nav }};
        }

        .wrapper-navigation .vertical-menu .categories-title {
            background-color: {{ bg_title }};
        }

        .wrapper-navigation .vertical-menu .icon-nav .icon-line,
        .wrapper-navigation .vertical-menu .icon-nav .icon-line:before,
        .wrapper-navigation .vertical-menu .icon-nav .icon-line:after {
            background-color: {{ color_title }};
        }

        .wrapper-navigation .vertical-menu .title {
            color: {{ color_title }};
        }

        .wrapper-navigation .vertical-menu .view_all {
            color: {{ color_view_all }};
        }

        /*  Menu Lv 1  */
        .search-fixed .icon-search,
        .cart-fixed a,
        .wrapper_header_supermarket .fb-like-code a,
        .horizontal-menu .menu-lv-1 > a {
            color: {{ color_menu_lv1 }};
        }

        .wrapper_header_supermarket .is-sticky .fixed-right-menu .cart-fixed,
        .wrapper_header_supermarket .is-sticky .fixed-right-menu .search-fixed {
            border-left-color: {{ section.settings.color_menu_lv1 | color_modify: 'alpha', 0.15 }};
        }
        
       .horizontal-menu .menu-lv-1 > a:hover {
            color: {{ hover_color_mnu_lv1 }};
        }

        .vertical-menu .site-nav .menu-lv-1 > a {
            color: {{ color_menu_lv3 }};
        }
        
        .vertical-menu .menu-lv-1 > a:hover {
            color: {{ color_menu_lv3 }};
            background-color: {{ settings.bg_color_menu_mb_lv1_hover }};
        }
        
        .horizontal-menu .menu-lv-1>a span:before {
            background-color: {{ hover_color_mnu_lv1 }};
        }
        
        /*  Menu Lv 2  */
        .site-nav .menu-lv-2>a,
        .site-nav .mega-menu .mega-banner .title,
        .site-nav .mega-menu .product-item .btn {
            color: {{ color_menu_lv2 }};
        }
        
        .site-nav .mega-menu .product-item .btn {
            border-bottom-color: {{ section.settings.color_menu_lv2 | color_modify: 'alpha', 0.7 }};
        }
        
        .site-nav .menu-lv-2 > a:hover {
            color: {{ hover_color_mnu_lv2 }};
        }
        
        /*  Menu Lv 3  */
        .site-nav .menu-lv-3 > a,
        .site-nav .no-mega-menu .menu-lv-2 > a {
            color: {{ color_menu_lv3 }};
        }
        
        .site-nav .menu-lv-3 > a:hover,
        .site-nav .no-mega-menu .menu-lv-2 > a:hover {
            color: {{ hover_color_mnu_lv3 }};
        }
        
        .site-nav .menu-lv-3 > a span:before {
            background-color: {{ hover_color_mnu_lv3 }};
        }
        
        .site-nav .icon_sale:before {
            border-top-color: {{ bg_lb_sale }};
        }

        .site-nav .icon_new:before {
            border-top-color: {{ bg_lb_new }};
        }

        .site-nav .icon_hot:before {
            border-top-color: {{ bg_lb_hot }};
        } 

        {% if section.settings.show_menu_at_mb %}
        .template-index .wrapper_header_supermarket .vertical-menu .nav-bar {
            opacity: 1;
            -ms-filter: "progid:DXImageTransform.Microsoft.Alpha(opacity=100)";
            filter: alpha(opacity=100);
            visibility: visible;
            pointer-events: auto;
            -moz-transform: translateY(0);
            -o-transform: translateY(0);
            -ms-transform: translateY(0);
            -webkit-transform: translateY(0);
            transform: translateY(0);
        } 

        .template-index .wrapper_header_supermarket .is-sticky .vertical-menu .nav-bar {
            opacity: 0;
            -ms-filter: "progid:DXImageTransform.Microsoft.Alpha(opacity=0)";
            filter: alpha(opacity=0);
            visibility: hidden;
            pointer-events: none;
            -moz-transform: translateY(30px);
            -o-transform: translateY(30px);
            -ms-transform: translateY(30px);
            -webkit-transform: translateY(30px);
            transform: translateY(30px);
        }

        .template-index .wrapper_header_supermarket .is-sticky .vertical-menu:hover .nav-bar {
            opacity: 1;
            -ms-filter: "progid:DXImageTransform.Microsoft.Alpha(opacity=100)";
            filter: alpha(opacity=100);
            visibility: visible;
            pointer-events: auto;
            -moz-transform: translateY(0);
            -o-transform: translateY(0);
            -ms-transform: translateY(0);
            -webkit-transform: translateY(0);
            transform: translateY(0);
        }

        {% endif %}
    }
        
    @media (max-width:1199px) {
        .site-nav .icon_sale:before {
            border-right-color: {{ bg_lb_sale }};
        }

        .site-nav .icon_new:before {
            border-right-color: {{ bg_lb_new }};
        }

        .site-nav .icon_hot:before {
            border-right-color: {{ bg_lb_hot }};
        }
    }
</style>