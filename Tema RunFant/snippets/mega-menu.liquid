        <div class="row mega-banner-bt">
            {% if banner_second_style != blank or banner_third_style != blank %}
            <div class="col-12 {% if display_cms_custom %}col-banner col-xl-6{% else %}col-xl-12{% endif %}">
                <div class="{% if banner_third_style != blank %}two-mega-banner{% endif %}">
                    {% if banner_second_style != blank %}
                    <div class="mega-col">
                        <a class="animate-scale" href="{{ link_banner_second_style }}" title="">
                            <img src="{{ banner_second_style | img_url : '250x' }}" alt="" />
                        </a>
                    </div>
                    {% endif %}

                    {% if banner_third_style != blank %}
                    <div class="mega-col">
                        <a class="animate-scale" href="{{ link_banner_third_style }}" title="">
                            <img src="{{ banner_third_style | img_url : '250x' }}" alt="" />
                        </a>
                    </div>
                    {% endif %}
                </div>
            </div>
            {% endif %}

             {% if display_cms_custom %}
            <div class="col-12 {% if banner_second_style != blank or banner_third_style != blank %}col-xl-6 col-cms{% else %}col-xl-12{% endif %}">
                <div class="mega-cms-block">
                    {% if cms_custom_title != blank %}
                    <h3 class="title">
                        {% include 'multilang' with cms_custom_title %}
                    </h3>
                    {% endif %}

                    {% if quote != blank %}
                        {% if settings.enable_multilang and quote contains '|' %}
                        <div class="rte-setting lang1">
                            {{ quote | split: '|' | first }}
                        </div>
                        <div class="rte-setting lang2">
                            {{ quote | split: '|' | last }}
                        </div>
                        {% else %}
                        <div class="rte-setting">
                            {{ quote | split: '|' | first }}
                        </div>
                        {% endif %}
                    {% endif %}

                    {% if cms_read_more_text != blank %}
                    <a class="read-more text-hover" href="{{ cms_read_more_link }}" title="{{ cms_read_more_text }}">
                        {% include 'multilang' with cms_read_more_text %}
                    </a>
                    {% endif %}
                </div>
            </div>
            {% endif %}
        </div>
    </div>
    {% endif %}

    {% endif %}
</div>
