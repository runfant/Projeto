                        </li>
                        {% endfor %}
                    </ul>
                </div>
                {% endif %}
            </div>
            {% endfor %}
        </div>
    </div>

    {% if banner_first_style != blank %}
    <div class="col-12 col5">
        <div class="mega-banner">
            {% if banner_first_style != blank %}
            <div class="mega-col col-right">
                <a class="animate-scale" href="{{ link_banner_first_style }}" title="">
                    <img src="{{ banner_first_style | img_url : "250x" }}" alt="" />
