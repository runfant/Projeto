            <div class="grid-sizer"></div>

            {% for l in linklists[link.handle].links %}
            <div data-gridItem class="menu-lv-2 inner{% if linklists[link.handle] != empty %} dropdown{% endif %} col-12 {% if banner_first_style != blank or banner_second_style != blank or banner_third_style != blank %}col-xl-4{% else %}col5{% endif %}">
                <!-- Menu level 2 -->
                <a {%if linklists[link.handle] != empty %}class="menu__moblie"{% endif %} href="{{ l.url }}" class="current">
