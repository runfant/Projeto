        "default": "44px"
      },
	  {
       "type": "image_picker",
        "id": "logo_mb",
        "label": "Logo Mobile"
      },
	  {
        "type": "text",
        "id": "max_height_logo_mb",
        "label": "Max Height",
        "default": "25px"
      },
    {
      "type":"header",
      "content":"Banner"
    },
    {
      "type":"image_picker",
      "id":"banner",
      "label":"Banner"
    },
  {
    "type":"header",
