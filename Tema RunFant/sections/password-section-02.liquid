  },
  {
      "type": "textarea",
      "id": "success_message",
      "label": "Subscribed Message",
      "default": "Thanks for contacting us. We'll get back to you as soon as possible"
  },
  {
      "type": "header",
      "content":"Footer"
  },
  {
    "type": "textarea",
    "id": "footer_address_code",
    "label": "Footer Address Code"
  }
  ]
}
