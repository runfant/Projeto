<div class="page-header">
  <div class="container">
    <div class="inner">
      <h2>
        {% include 'multilang' with page.title %}
      </h2>
      {% include 'multilang-block' with section.settings.page_description, class:'page-description' %}
    </div>
  </div>
</div>  
<div class="container">
  {% include 'breadcrumb' %}
  {% if section.settings.display_filter %}
  <div class="pfl-filter">
    {% assign filter_list = section.settings.filter_list | split:';' %}
    <ul class="filter-list">
      <li class="item active">
        <a href="#" data-filter="all">All</a>
      </li>
      {% for item  in filter_list %}
      <li class="item">
        <a href="#" data-filter="{{item | downcase | strip}}">{{item}}</a>
      </li>
      {% endfor %}
    </ul>
  </div>
  {% endif %}
  <div class="pfl-content">
    <div class="row shuffle-container">
      {% for block in section.blocks %}
      <div class="pfl-item col-12 col-sm-6" data-groups='["{{block.settings.categories | downcase | split:';' | join:'","'}}"]'>
        <div class="pfl-inner">
        <div class="pfl-thumb" data-gallery="
          {%- for i in (1..10) -%}
          {%- capture imageGallery %}image_{{i}}{% endcapture -%}
          {%- if block.settings[imageGallery] != blank -%}
            {%- unless forloop.first -%},{%- endunless -%}{{block.settings[imageGallery] | img_url:'master'}}
          {%- endif -%}
          {%- endfor -%}
        ">
          {% if block.settings.thumbernail != blank %}
          <img src="{{block.settings.thumbernail | img_url:'800x800'}}" alt="{{block.settings.title}}">
          {% else %}
          <div class="not_img">
            300 x 400 px
          </div>
          {% endif %}
          <div class="gallery-box"></div>
        </div>
        <div class="pfl-text">
          <h3><a href="{{block.settings.link_to}}">{% include 'multilang' with block.settings.title %}</a></h3>
          <p>{% include 'multilang' with block.settings.subtitle %}</p>
        </div>
        <i class="fa fa-search-plus" aria-hidden="true"></i>
        </div>
      </div>
      {% endfor %}
      <div class="pfl-item col col-sm-6 sizer-element"></div>
    </div>
  </div>
</div>
<style>
  

.pfl-item {
  padding-top:15px;
  padding-bottom:15px
}
.pfl-item i{
  color:{{section.settings.text_color}};
  font-size: 22px;
  position:absolute;
  top:30px;
  right:30px;
  display: block;
  opacity:1;
  -webkit-transition: all 0.3s ease-in-out;
  -o-transition: all 0.3s ease-in-out;
  transition: all 0.3s ease-in-out;
}

.pfl-text h3{
  font-size: 20px;
  font-weight: 600;
  letter-spacing: 0.02em;
  margin-bottom:10px;
}
.pfl-text h3 a{
  color:inherit;
  position:relative;
}


/*template 1*/
.pfl-1-tmpl{

}
.page-header{
  {% if section.settings.background != blank %}
  background-image:url({{section.settings.background | img_url:'master'}});
  background-size: cover;
  background-position: center center;
  {% else %}
  background-color:rgba(35,35,35,0.2);
  {% endif %}
  color:{{section.settings.header_text_color}};
  text-align: center;
  padding-top: 80px;
  padding-bottom:75px;
}
.page-header .inner{
  width:100%;
  max-width:460px;
  margin:0 auto;
}
.page-header h2{
  color:{{section.settings.header_text_color}};
  font-size: 20px;
  margin-bottom:18px;
}  
.page-header .page-description{
  line-height: {{settings.body_font_size | plus: 10}}px;
}
.breadcrumb{
  -webkit-justify-content: center;
  -moz-justify-content: center;
  -ms-justify-content: center;
  justify-content: center;
}
.filter-list{
  text-align: center;
  margin-bottom:35px;
}
.filter-list li{
  display: inline-block;
  margin-bottom:10px;
}
.filter-list li a{
  display: block;
  text-transform: uppercase;
  letter-spacing: 0.05em;
  color:#3c3c3c;
  padding:10px 22px 8px;
  border:1px solid rgba(0,0,0,0);
  border-radius:20px;
}
.filter-list li a:hover,
.filter-list li.active a{
  border:1px solid #cbcbcb;
}
.pfl-item .pfl-thumb img{
  display: block;
  margin:0 auto;
}
.pfl-text{
  padding:20px 30px;
}
@media (min-width:1025px){
  .pfl-item i{
      opacity:0;
    }
  .pfl-content{
    margin-top:-15px;
  }
  .pfl-item .pfl-inner{
    position: relative;
  }
  .pfl-item .pfl-thumb{
    position: relative;
  }


  .pfl-text{
    color:{{section.settings.text_color}};
    position:absolute;
    bottom:0;
    left:0;
    width: 100%;
    opacity:0;
    background-color: {{section.settings.overlay_color}};
    -webkit-transition: all 0.3s ease-in-out;
    -o-transition:aAll 0.3s ease-in-out;
    transition: all 0.3s ease-in-out;
    padding:45px 50px;
  }
  .pfl-text h3{

  }
  .pfl-text h3 a:before{
    background-color:{{section.settings.text_color}};
  }
  .pfl-text h3 a:hover:before{
  content:'';
  position:absolute;
  width: 100%;
  height:1px;
  bottom:3px;
}

  .pfl-item:hover .pfl-text{
    opacity:{{section.settings.overlay_opacity}};
  }
  .pfl-item:hover i{
    opacity:1;
  }
}

@media (max-width:767px){
  .pfl-wrapper{
    position:relative;
    overflow:hidden;
  }

  .pfl-wrapper.open-sidebar .pfl-filter{
    left:0;
  }
  .pfl-wrapper.open-sidebar .pfl-content{
    -webkit-transform: translate(60vw,0);
    -ms-transform: translate(60vw,0);
    transform: translate(60vw,0);
  }
  .fancybox-navigation button.fancybox-arrow{
    display:none;
  }
  .filter-list{
    white-space: nowrap;
    overflow-y: hidden;
    overflow-x: auto;
  }
}

</style>


