{% if section.blocks.size > 0 %}
<section class="home-brands-block" id="home-brands-{{section.id}}">
    <div class="{% if section.settings.layout == 'default' %}container{% elsif section.settings.layout == 'padd_60' %}container-padd60{% endif %}">
        <div class="brands-block">
            {% if section.settings.brand_title != blank %}
            <div class="widget-title{% if section.settings.title_style == 'style_2' %} not-before{% endif %}">
                <h3 class="box-title">
                    <span class="title">
                    {% include 'multilang' with section.settings.brand_title %}
                    </span>
                </h3>
                {% if section.settings.brand_des != blank %}
                <p>
                    {% include 'multilang' with section.settings.brand_des %}
                </p>
                {% endif %}
            </div>
            {% endif %}

            <div class="row brands-slider" data-brands-slider data-rows="{{ section.settings.brand_rows }}">
                {% for block in section.blocks %}
                <div class="item col-12 col-sm-6 col-md-4 col-lg-3 col5">
                    <a title="{{ block.settings.title }}" href="{{ block.settings.link }}">
                        {% if block.settings.image != blank %}
                        <img src="{{ block.settings.image | img_url : "200x" }}" alt="{{ block.settings.image.alt }}"/>
                        {% else %}
                        <div class="not_img">
                        186 x 74px
                        </div>
                        {% endif %}
                    </a>
                </div>
                {% endfor %}
            </div>
        </div>
    </div>
</section>

<style>
    {% assign margin_bottom =  section.settings.margin_bottom %}

    @media (min-width: 768px) {
            {% unless section.settings.display_brand_border %}
            #home-brands-{{section.id}} {
                border-top: none;
            }
            {% endunless %}
    }

    {% if section.settings.display_brand_border %}
    #home-brands-{{section.id}} {
        border-top: 1px solid #ebebeb;
    }
    {% endif %}

    @media (max-width: 767px) {
        #home-brands-{{section.id}} {
            margin-bottom: {{ section.settings.margin_bottom_mb }}px;
        }
    }

    @media (min-width: 768px) and (max-width: 1199px) {
        #home-brands-{{section.id}} {
            margin-bottom: {{ section.settings.margin_bottom_tab }}px;
        }
    }

    @media (min-width: 1200px) {
        #home-brands-{{section.id}} {
        margin-bottom: {{ margin_bottom }}px;
        }
    }

</style>
{% endif %}


{% schema %}
    {
        "name": "Brands Block",
        "class": "home-brands-sections",
        "max_blocks": 10,
        "settings": [
            {
                "type": "select",
                "id": "layout",
                "label": "Layout:",
                "options": [
                    {
                        "value": "default",
                        "label": "Default"
                    },
                    {
                        "value": "padd_60",
                        "label": "Boxed"
                    }
                ],
                "default": "default"
            },
            {
                "type": "header",
                "content": "Margin Bottom:"
            },
            {
                "type": "range",
                "id": "margin_bottom_mb",
                "label": "Mobile",
                "min": 0,
                "max": 100,
                "step": 1,
                "default": 0
            },
            {
                "type": "range",
                "id": "margin_bottom_tab",
                "label": "Tablet",
                "min": 0,
                "max": 100,
                "step": 1,
                "default": 0
            },
            {
                "type": "range",
                "id": "margin_bottom",
                "label": "Margin Bottom",
                "min": 0,
                "max": 100,
                "step": 1,
                "default": 0
            },
            {
                "type": "checkbox",
                "id": "display_brand_border",
                "label": "Display Border?",
                "default": true
            },
            {
                "type": "header",
                "content": "Header"
            },
            {
                "type": "text",
                "id": "brand_title",
                "label": "Title"
            },
            {
                "type" : "textarea",
                "id" : "brand_des",
                "label" : "Description"
            },
            {
                "type": "select",
                "id": "title_style",
                "label": "Title Style:",

                "options": [
                    {
                        "value": "style_1",
                        "label": "Style 1"
                    },
                    {
                        "value": "style_2",
                        "label": "Style 2"
                    }
                ],
                "default": "style_1"
            },
            {
                "type": "select",
                "id": "brand_rows",
                "label": "Brand per row",
                "options": [
                    {
                        "value": "4",
                        "label": "4"
                    },
                    {
                        "value": "5",
                        "label": "5"
                    },
                    {
                        "value": "6",
                        "label": "6"
                    }
                ],
                "default": "5"
            }
        ],
        "blocks": [
            {
                "type": "image",
                "name": "Image",
                "settings": [
                {
                    "type": "image_picker",
                    "id": "image",
                    "label": "Image",
                    "info" : "Recommended Image: Width x Height (186 x 74)px"
                },
                {
                    "type": "text",
                    "id": "title",
                    "label": "Your Brands",
                    "default": "Loremous"
                },
                {
                    "type": "url",
                    "id": "link",
                    "label": "Link",
                    "info": "Optional"
                }
                ]
            }
        ],
        "presets": [
            {
                "name": "Brands Block",
                "category": "Brands"
            }
        ]
    }
{% endschema %}
