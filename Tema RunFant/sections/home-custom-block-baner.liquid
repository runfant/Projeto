	"class": "home-custom-block-baner-sections",
    "max_blocks": 3,
    "settings": [
        {
            "type": "select",
            "id": "layout",
            "label": "Banner Layout:",
            "options": [
                {
                    "value": "default",
                    "label": "Default"
