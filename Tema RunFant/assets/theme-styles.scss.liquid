.products-grid {
    .wishlist-text {
        display: none;
    }

    .grid-item {
        margin-bottom: 50px;
        margin-top: 10px;

        .not_img {
            height: 270px;
            line-height: 270px;
            font-size: 18px;
        }

        .no-product {
            .product-top {
                margin-bottom: 10px;
            }
        }

        .product-details {
            display: none!important;
        }

        &.banner-img {
            img {
                width: 100%;
                object-fit: cover;
            }
        }

        &:not(.grid-item-mansory) {
            {% if settings.product_image_resize %}
            .product-image {
                overflow:hidden;
                img {
                    position: absolute!important;
                    top: 50%;
                    left: 50%;
                    @include translate(-50%, -50%);
                    object-fit: contain;
                    {% if settings.product_image_crop %}
                    height:100%;
                    width:auto;
                    max-width:none;
                    {% else %}
                    height: 100%;
                    max-height: 100%;
                    width: 100%;
                    max-width: 100%;
                    {% endif %}

                }
            }

            .product-grid-image {
                position: relative;

                &:after {
                    content: "";
                    display: block;
                    width: 100%;
                    height: 0;
                    padding-top: {{settings.product_image_height}}%;
                }
            }
            {% endif %}
        }
    }

    .product-image {
        .product-grid-image {
            min-height: 216px;
        }

        img {
            min-height: 216px;
        }
    }

    &.grid-2,
    &.grid-3,
    &.grid-4,
    &.grid-5 {
        display: block;
        -webkit-column-gap: 0;
        -moz-column-gap: 0;
        column-gap: 0;
        padding-bottom: 40px;

        .grid-item {
            break-inside: avoid;
            break-inside: avoid-column;
            page-break-inside: avoid;
            -webkit-column-break-inside: avoid;
            -webkit-box-flex: 0;
            -ms-flex: 0 0 100%;
            flex: 0 0 100%;
            max-width: 100%;
        }
    }

    &.grid-2 {
        -moz-column-count: 2;
        -webkit-column-count: 2;
        column-count: 2;
    }
}

{% if settings.product_image_resize %}
.sidebar-widget-product {
    .products-grid .grid-item {
        .product-grid-image {
            &:after {
                padding-top: 160px;
            }
        }
    }
}
{% endif %}

