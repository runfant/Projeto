        .fbt-image-item {
            padding: 0 10px;
            text-align: center;
            @include transition(all .3s ease);

            &:not(.isChecked) {
                .item-image {
                    @include opacity(.45);
                }
            }

            &+.fbt-image-item {
                position: relative;

                &:before {
                    position: absolute;
                    content: '+';
                    z-index: 2;
                    font-size: 18px;
                    left: 0px;
                    top: 50%;
                    @include translate(-50%, -50%);
                }
            }
        }

        &:not(.slick-slider) {
            @include flexbox();
          @include justify-content(space-around);

            .fbt-image-item {
                display: none;

                &:nth-child(-n+5) {
                    display: block;
                    -webkit-box-flex: 0;
                    -ms-flex: 0 0 20%;
                    flex: 0 0 20%;
                    max-width: 20%;
                }
            }
        }

        .item-image {
            display: block;
            max-width: 100px;
            margin: auto;
        }

        .slick-arrow {
            &.slick-prev {
                left: 10px;
            }

            &.slick-next {
                right: 10px;
            }
        }
    }

    .fbt-text {
        font-size: $font_size + 1;
