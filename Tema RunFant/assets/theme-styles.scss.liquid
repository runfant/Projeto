        &:before {
            bottom: -16px;
            content: "";
            display: block;
            height: 16px;
            left: 0;
            position: absolute;
            width: 100%;
        }

        &:after {
            border-left: solid transparent 7px;
            border-right: solid transparent 7px;
            border-top: solid $background_1 7px;
            bottom: -7px;
            content: " ";
            height: 0;
            left: 50%;
            @include translateX(-50%);
            position: absolute;
            width: 0;
        }
    }

    .swatch-element:hover .tooltip {
